{
  "openapi": "3.0.0",
  "info": {
    "title": "API Desafio Jitterbit",
    "description": "API de Integração de Pedidos (E-commerce -> ERP)",
    "version": "1.0.0",
    "contact": {
      "name": "Seu Nome",
      "url": "https://github.com/jjoaovsb"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Servidor Local"
    }
  ],
  "paths": {
    "/order": {
      "post": {
        "summary": "Criar um novo pedido (Integração)",
        "description": "Recebe o payload em Português e salva no banco em Inglês.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PedidoEntrada"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Pedido criado com sucesso"
          },
          "400": {
            "description": "Dados inválidos"
          },
          "409": {
            "description": "Pedido duplicado"
          }
        }
      }
    },
    "/order/list": {
      "get": {
        "summary": "Listar todos os pedidos",
        "responses": {
          "200": {
            "description": "Lista recuperada com sucesso"
          }
        }
      }
    },
    "/order/{id}": {
      "get": {
        "summary": "Buscar pedido por ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Pedido encontrado" },
          "404": { "description": "Pedido não encontrado" }
        }
      },
      "put": {
        "summary": "Atualizar um pedido",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/PedidoEntrada" }
            }
          }
        },
        "responses": {
          "200": { "description": "Atualizado com sucesso" }
        }
      },
      "delete": {
        "summary": "Deletar um pedido",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Removido com sucesso" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "PedidoEntrada": {
        "type": "object",
        "properties": {
          "numeroPedido": { "type": "string", "example": "v10089015vdb-01" },
          "valorTotal": { "type": "number", "example": 10000 },
          "dataCriacao": { "type": "string", "format": "date-time", "example": "2023-07-19T12:24:11.529Z" },
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "idItem": { "type": "string", "example": "2434" },
                "quantidadeItem": { "type": "integer", "example": 1 },
                "valorItem": { "type": "number", "example": 1000 }
              }
            }
          }
        }
      }
    }
  }
}